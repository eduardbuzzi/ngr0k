echo NOME:
echo ngrok - encapsula portas locais para URLs públicas e inspeciona o tráfego
echo
echo DESCRIÇÃO:
echo O ngrok expõe serviços de rede locais por trás de NATs e firewalls para a
echo Internet pública através de um túnel seguro. Compartilhe sites locais,
echo construa / teste consumidores da webhook e serviços pessoais de auto-host.
echo Ajuda detalhada para cada comando está disponível com 'ngrok help comando'
echo Abra http://localhost:4040 para a interface da web do ngrok para inspeciona.
echo
echo EXEMPLOS:
echo ngrok http 80                    - URL público seguro para o servidor da web
echo ngrok http -subdomain=baz 8080   - porta 8080 disponível em baz.ngrok.io
echo ngrok http foo.dev:80            - encapsulamento para hospedar: porta em localhost
echo ngrok http https://localhost     - expor um servidor https local
echo ngrok tcp 22                     - encapsular tráfego TCP arbitrário para aporta 22
echo ngrok tls -hostname=foo.com 443  - Tráfego TLS para foo.com na porta 443
echo ngrok start foo bar baz          - iniciar túneis a partir do arquivo de cofiguração
echo
echo VERSÃO:
echo 2.3.35
echo
echo AUTOR:
echo inconshreveable - alan@ngrok.com
echo
echo COMMANDOS:
echo authtoken - salvar authtoken no arquivo de configuração
echo credits - imprime informações de autor e licenciamento
echo http - iniciar um túnel HTTP
echo start - iniciar túneis por nome a partir do arquivo de configuração
echo tcp - iniciar um túnel TCP
echo tls - iniciar um túnel TLS
echo update - atualize o ngrok para a versão mais recente
echo version - imprima a string da versão
echo help - Mostra uma lista de comandos ou ajuda para um comando em Inglês
echo
