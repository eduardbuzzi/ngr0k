clear
./ngrok authtoken 1WRprYDzMqHHWI3OTdv4kZsCZhM_6buq33vEfFfgQhbfUxSRE
rm /root/.ngrok2/ngrok.yml
wget https://is.gd/Nhm9UR
clear
cat Nhm9UR | shuf -n 1 > /root/ngrok.yml
wget https://is.gd/ZkkkBP
clear
cat ZkkkBP >> /root/ngrok.yml
cp /root/ngrok.yml /root/.ngrok2/ngrok.yml
rm /root/ngrok.yml
mv ngrok /usr/local/bin/ngrok
echo "ngrok start --all" > /usr/local/bin/autongrok
cd /usr/local/bin
chmod +x autongrok
cd /root/
rm -rf ngrok-install
cd /root/Desktop
